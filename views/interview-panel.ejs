

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/dashboard/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <nav class="nav navbar navbar-expand-lg bg-body-tertiary">
      <div class="container1 container-fluid">
        <a class="text navbar-brand" href="#">DrDo:UnBeatable</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarText"      
          aria-controls="navbarText" 
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="mini-container collapse navbar-collapse" id="navbarText">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" id="home" aria-current="page" href="/"
                >Home</a
              >
            </li>
           
          </ul>
          <ul class="navbar-nav ms-auto">
            <% if (user) { %>
            <li class="nav-item">
              <a class="nav-link" href="/auth/logout">Logout</a>
            </li>
            <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/auth/signup">Signup</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/auth/login">Login</a>
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>
    <div>
        <div class="container mt-4">
          <h1>Interview Panel for <%= candidate.firstname %> <%= candidate.lastname %></h1>
          <br>
          <% if ((drdoExperts ) || (industryExperts ) || (academicExperts )) { %>
                <div class="row">
                  
                 <div class="col-md-4">
                  <h3>DRDO Experts</h3>
                  <% if (drdoExperts.length > 0) { %>
                    <table class="table table-striped">
                        <thead>
                          <tr>
                            <th scope="col">#</th>
                            <th scope="col">Expert Name</th>
                            <th scope="col">Relevancy Score</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% drdoExperts.forEach((expert, index) => { %>
                            <tr>
                              <th scope="row"><%= index + 1 %></th>
                              <td><%= expert.firstname %> <%= expert.lastname %></td>
                              <td><%= expert.score %></td>
                            </tr>
                          <% }) %>
                        </tbody>
                      </table>
                      <% } else { %>
                        <p>No DRDO experts available.</p>
                        <% } %>
                    </div>
          
                 
                    <div class="col-md-4">
                      <h3>Industry Experts</h3>
                      <% if (industryExperts.length > 0) { %>
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th scope="col">#</th>
                            <th scope="col">Expert Name</th>
                            <th scope="col">Relevancy Score</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% industryExperts.forEach((expert, index) => { %>
                            <tr>
                              <th scope="row"><%= index + 1 %></th>
                              <td><%= expert.firstname %> <%= expert.lastname %></td>
                              <td><%= expert.score %></td>
                            </tr>
                          <% }) %>
                        </tbody>
                      </table>
                      <% } else { %>
                        <p>No Industry experts available.</p>
                        <% } %>
                    </div>
          
                    
                    <div class="col-md-4">
                      <h3>Academic Experts</h3>
                      <% if (academicExperts.length > 0) { %>
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th scope="col">#</th>
                            <th scope="col">Expert Name</th>
                            <th scope="col">Relevancy Score</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% academicExperts.forEach((expert, index) => { %>
                            <tr>
                              <th scope="row"><%= index + 1 %></th>
                              <td><%= expert.firstname %> <%= expert.lastname %></td>
                              <td><%= expert.score %></td>
                            </tr>
                          <% }) %>
                        </tbody>
                      </table>
                      <% } else { %>
                        <p>No Academic experts available.</p>
                        <% } %>
                    </div>
                  </div>
                <% } else { %>
                  <p>No experts available.</p>
                <% } %>
              </div>
  </body>
</html>

