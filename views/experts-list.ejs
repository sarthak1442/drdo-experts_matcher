<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/list/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div>
      <h1>Expert's List</h1>
    </div>
    <div class="container">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col" colspan="2">Name</th>
            <th scope="col" colspan="2">ID</th>
            <th scope="col" colspan="4">EDIT</th>
          </tr>
        </thead>
        <tbody>
          <% experts.forEach((expert, index) => { %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td colspan="2"><%= expert.firstname %> <%= expert.lastname %></td>
            <td colspan="2"><%= expert.id %></td>
            <td colspan="2">
              <button>
                <a href="edit-expertForm/<%= expert._id %>" method="GET"
                  >EDIT</a
                >
              </button>
            </td>
            <td colspan="2">
              <form
                action="/delete-expert/<%= expert._id %>"
                method="POST"
                class="delete"
                style="display: inline"
              >
                <button type="submit">DELETE</button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
